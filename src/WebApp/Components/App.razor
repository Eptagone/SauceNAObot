@inject IWebHostEnvironment Environment
@inject IViteDevServerStatus Vite
@inject IViteManifest ViteManifest

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <base href="/" />
        @if (Environment.IsDevelopment())
        {
            <script type="module" src="@Vite.ServerUrlWithBasePath/@@vite/client"></script>
            <link rel="stylesheet" href="@Vite.ServerUrlWithBasePath/tailwind.config.css" />
        }
        else
        {
            <link rel="stylesheet" href="dist/@ViteManifest["tailwind.config.css"]!.File" />
        }
        <link rel="stylesheet" href="SauceNao.Webhook.styles.css" />
        <HeadOutlet />
    </head>

    <body>
        <Routes />
        <script src="_framework/blazor.web.js"></script>
    </body>

</html>
